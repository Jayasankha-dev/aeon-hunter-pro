{
  "manifest_version": 3,
  "name": "Aeon Hunter Lite",
  "version": "1.0.0",
  "description": "Lightweight web security reconnaissance tool for monitoring traffic and DOM analysis.",
  "permissions": [
    "webRequest",
    "sidePanel",
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "side_panel": {
    "default_path": "dashboard.html"
  },
  "action": {
    "default_title": "Open Aeon Hunter Lite"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}